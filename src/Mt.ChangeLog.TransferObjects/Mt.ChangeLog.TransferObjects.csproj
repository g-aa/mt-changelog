<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
    <IsPackable>true</IsPackable>
    <PackageId>Mt.ChangeLog.TransferObjects</PackageId>
    <PackageTags>Mt;Net;ChangeLog;TransferObjects;</PackageTags>
    <Description>Модели объектов DTO в Mt ChangeLog.</Description>
    <AssemblyOriginatorKeyFile>$(MSBuildThisFileDirectory)mt-changelog-transfer-objects.snk</AssemblyOriginatorKeyFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageProjectUrl>https://github.com/g-aa/mt-changelog</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>iconLog.png</PackageIcon>
    <PackageVersion>$(Build_Version)</PackageVersion>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
    <None Include="..\..\iconLog.png" Pack="true" PackagePath="\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="FluentValidation" Version="11.9.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
    <PackageReference Include="Mt.FluentValidation" Version="6.0.0" />
    <PackageReference Include="Mt.Utilities" Version="8.0.0" />
  </ItemGroup>
</Project>